<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertLinkIsNotVisibleOnGroupedProductPageActionGroup">
        <annotations>
            <description>Validates that the provided Product Name is not presented on a Storefront Grouped Product page.</description>
        </annotations>
        <arguments>
            <argument name="productName" type="string"/>
        </arguments>

        <dontSee selector="{{StorefrontProductInfoMainSection.groupedProductsTable}}" userInput="{{productName}}" stepKey="seeFirstStagedGroupedProduct"/>
    </actionGroup>
</actionGroups>
