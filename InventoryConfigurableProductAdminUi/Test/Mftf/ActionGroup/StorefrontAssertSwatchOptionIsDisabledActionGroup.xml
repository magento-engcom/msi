<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertSwatchOptionIsDisabledActionGroup">
        <annotations>
            <description>Verify specified swatch option is presented and disabled on configurable product detail page. Starts on configurable PDP.</description>
        </annotations>
        <arguments>
            <argument name="swatchLabel" type="string" defaultValue="{{visualSwatchOption1.default_label}}"/>
        </arguments>
        <seeElement selector="{{StorefrontProductInfoMainSection.swatchOptionDisabled(swatchLabel)}}" stepKey="verifyOptionIsVisibleAndDisabled"/>
    </actionGroup>
</actionGroups>
