<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\InventoryCatalog\Api\DefaultStockProviderInterface" type="Magento\InventoryCatalog\Model\DefaultStockProvider"/>
    <preference for="Magento\InventoryCatalog\Api\DefaultSourceProviderInterface" type="Magento\InventoryCatalog\Model\DefaultSourceProvider"/>
    <type name="Magento\InventoryCatalog\Model\LegacyUpdateService">
        <arguments>
            <argument name="tableName" xsi:type="array">
                <item name="stock_item" xsi:type="string">cataloginventory_stock_item</item>
                <item name="stock_status" xsi:type="string">cataloginventory_stock_status</item>
            </argument>
            <argument name="params" xsi:type="array">
                <item name="stock_item" xsi:type="array">
                    <item name="qty_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockItemInterface::QTY
                    </item>
                    <item name="stock_id_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockItemInterface::STOCK_ID
                    </item>
                    <item name="product_id_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockItemInterface::PRODUCT_ID
                    </item>
                </item>
                <item name="stock_status" xsi:type="array">
                    <item name="qty_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockStatusInterface::QTY
                    </item>
                    <item name="stock_id_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockStatusInterface::STOCK_ID
                    </item>
                    <item name="product_id_key" xsi:type="const">
                        Magento\CatalogInventory\Api\Data\StockStatusInterface::PRODUCT_ID
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\InventoryApi\Api\StockRepositoryInterface">
        <plugin name="prevent_default_stock_deleting"
                type="Magento\InventoryCatalog\Plugin\InventoryApi\StockRepository\PreventDeleting\DefaultStockPlugin"/>
        <plugin name="prevent_assigned_to_sales_channels_stock_deleting"
                type="Magento\InventoryCatalog\Plugin\InventoryApi\StockRepository\PreventDeleting\AssignedToSalesChannelsStockPlugin"/>
    </type>
    <type name="Magento\InventoryApi\Api\ReservationsAppendInterface">
        <plugin name="update_legacy_catalog_inventory_at_stock_deduction" type="Magento\InventoryCatalog\Plugin\InventoryApi\UpdateLegacyCatalogInventoryAtStockDeductionPlugin"/>
    </type>
    <type name="Magento\CatalogInventory\Model\ResourceModel\QtyCounterInterface">
        <plugin name="update_source_item_at_legacy_qty_counter" type="Magento\InventoryCatalog\Plugin\CatalogInventory\UpdateSourceItemAtLegacyQtyCounterPlugin"/>
    </type>
    <type name="Magento\CatalogInventory\Model\ResourceModel\Stock\Item">
        <plugin name="update_source_item_at_legacy_stock_setting" type="Magento\InventoryCatalog\Plugin\CatalogInventory\UpdateSourceItemAtLegacyStockSettingPlugin"/>
    </type>
    <type name="Magento\CatalogInventory\Model\StockManagement">
        <plugin name="stock_management_register_products_sale_legacy" type="Magento\InventoryCatalog\Plugin\CatalogInventory\StockManagementRegisterProductsSaleLegacyPlugin"/>
        <plugin name="stock_management_back_item_qty_legacy" type="Magento\InventoryCatalog\Plugin\CatalogInventory\StockManagementBackItemQtyLegacyPlugin"/>
        <plugin name="stock_management_revert_products_sale_legacy" type="Magento\InventoryCatalog\Plugin\CatalogInventory\StockManagementRevertProductsSaleLegacyPlugin"/>
    </type>
</config>
