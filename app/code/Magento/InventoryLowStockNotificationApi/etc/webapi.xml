<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/inventory/source-item-configuration/:sourceCode/:sku" method="GET">
        <service class="Magento\InventoryLowStockNotificationApi\Api\GetSourceItemConfigurationInterface" method="execute"/>
        <resources>
            <resource ref="Magento_InventoryApi::source"/>
        </resources>
    </route>
    <route url="/V1/inventory/source-item-configuration" method="POST">
        <service class="Magento\InventoryLowStockNotificationApi\Api\SourceItemConfigurationsSaveInterface" method="execute"/>
        <resources>
            <resource ref="Magento_InventoryApi::source"/>
        </resources>
    </route>
    <route url="/V1/inventory/source-item-configuration" method="DELETE">
        <service class="Magento\InventoryLowStockNotificationApi\Api\DeleteSourceItemConfigurationInterface" method="execute"/>
        <resources>
            <resource ref="Magento_InventoryApi::source"/>
        </resources>
    </route>
</routes>